{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "./run.sh",
            "args": [
                "FAST_WSL"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Execute",
            "type": "shell",
            "command": "qemu-system-x86_64",
            "args": [
                "-hda",
                "\"/tmp/retos/x64BareBonesImage.qcow2\"",
                "-m",
                "512",
                "-d",
                "int",
                "-soundhw",
                "pcspk"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build and execute in debug mode",
            "type": "shell",
            "command": "./run.sh",
            "args": [
                "DEBUG"
            ],
            "group": "build"
        }
    ]
}